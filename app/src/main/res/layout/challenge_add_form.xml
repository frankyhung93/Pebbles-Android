<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:elevation="5dp"
            android:gravity="center_horizontal"
            android:text="Challenge..."
            android:textSize="20sp" />

        <EditText
            android:id="@+id/eT_challengename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Challenge Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/eT_challengedesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Challenge Description"
            android:inputType="textPersonName" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rwd_type_ll"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reward Type:" />

            <Spinner
                android:id="@+id/reward_type_spinner"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:entries="@array/rwdtype_arrays"
                android:prompt="@string/reward_type" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rwd_ll"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Choose Reward:" />
            <Spinner
                android:id="@+id/rewards_spinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:prompt="@string/reward"/>
        </LinearLayout>

        <EditText
            android:id="@+id/eT_prize_gold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Gold Prize"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/eT_prize_diamond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Diamond Prize"
            android:inputType="numberSigned" />
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/challenge_type_ll"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Challenge Type:" />
            <Spinner
                android:id="@+id/challenge_type_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/type_arrays"
                android:prompt="@string/choose_type"/>
        </LinearLayout>

        <EditText
            android:id="@+id/eT_challenge_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Challenge Counter"
            android:inputType="numberSigned" />

        <LinearLayout
            android:id="@+id/steps_container"
            android:orientation="vertical"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/plus_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:layout_margin="2dp"
                android:background="@drawable/cus_edit_btn"
                android:text="Add Step" />

        </LinearLayout>

        <EditText
            android:id="@+id/eT_startdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:inputType="date"
            android:hint="Start Date"/>

        <CheckBox
            android:id="@+id/challenge_ckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time Limit" />

        <EditText
            android:id="@+id/eT_enddate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:inputType="date"
            android:hint="Dead Line"/>

    </LinearLayout>
</ScrollView>